{
    "name": "pantheon-systems/terminus-yml-validator",
    "description": "An example Terminus command",
    "type": "terminus-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Pantheon\\TerminusYmlValidator\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 -n src tests/unit",
        "cbf": "phpcbf --standard=PSR12 -n src tests/unit",
        "lint": "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
        "unit": "phpunit --colors=always tests",
        "functional": "TERMINUS_PLUGINS_DIR=.. PATH=tools/bin:$PATH bats --verbose-run -p -t tests/functional",
        "install-bats": "if [ ! -f tools/bin/bats ] ; then git clone https://github.com/bats-core/bats-core.git tools/bats; tools/bats/install.sh tools; fi",
        "install-tools": [
            "@install-bats"
        ],
        "test": [
            "@lint",
            "@unit",
            "@functional",
            "@cs"
        ]
    },
    "extra": {
        "terminus": {
            "compatible-version": "^1||^2||^3"
        }
    },
    "require": {
        "symfony/yaml": "^6.2"
    }
}